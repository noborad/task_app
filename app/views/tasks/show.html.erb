<h2>ユーザー詳細</h2>

<table>
        <tr>
            <th>ID</th>
            <td><%= @task.id %></td>
        </tr>
        <tr>
            <th>タイトル</th>
            <td><%= @task.title %></td>
        </tr>
        <tr>

            <th>開始日</th>
            <td><%= @task.start %></td>
        </tr>
        <tr>
            <th>終了日</th>
            <td><%= @task.finish %></td>
        </tr>
        <tr>
            <th>終日</th>
            <% if @task.day == "1" %>
                <td>◯</td>
            <% else %>
                <td></td>
            <% end %>
        </tr>
        <tr>
            <th>スケジュール更新日</th>
            <td><%= @task.created_at %></td>
        </tr>
</table>

<div>
    <ul>
        <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
        <li><%= link_to "編集画面へ行く", [:edit, @task] %></li>
        <li><%= link_to "このスケジュールを削除する", @task, method: :delete, data:{confirm: "本当に削除しますか？"} %></li>
    </ul>
</div>