<h2>スケジュール一覧</h2>

<% if flash.notice %>
    <p class="notice"><%= flash.notice %></p>
<% end %>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>タイトル</th>
            <th>開始日</th>
            <th>終了日</th>
            <th>終日</th>
            <th>スケジュール更新日</th>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= task.id %></td>
                <td><%= task.title %></td>
                <td><%= task.start %></td>
                <td><%= task.finish %></td>
                <% if task.day == "1" %>
                    <td>◯</td>
                <% else %>
                    <td></td>
                <% end %>
                <% if task.updated_at %>
                    <td><%= task.updated_at.to_s(:datetime_jp) %></td>
                <% else %>
                    <td><%= task.created_at.to_s(:datetime_jp) %></td>
                <% end %>
                <td><%= link_to "参照", task %></td>
                <td><%= link_to "編集", [:edit, task] %></td>
                <td><%= link_to "削除", task, method: :delete, data:{confirm: "本当に削除しますか？"} %></td>
            </tr>
        <% end %>
        
    </tbody>
</table>

<p><%= link_to "スケジュール新規作成", :new_task %></p>